-- The name of the tool to look for
local toolName = "The Arkenstone" -- Replace with the name of your tool

-- Function to find a random player with the specific tool and show notification
local function notifyRandomPlayerWithTool()
    local playersWithTool = {}
    
    -- Collect players who have the specific tool
    for _, player in ipairs(game.Players:GetPlayers()) do
        local backpack = player.Backpack
        local tool = backpack:FindFirstChild(toolName)
        if tool then
            table.insert(playersWithTool, player)
        end
    end
    
    -- Notify with a random player's username
    if #playersWithTool > 0 then
        local randomPlayer = playersWithTool[math.random(1, #playersWithTool)]
        local username = randomPlayer.Name

        local CoreGui = game:GetService("StarterGui")
        CoreGui:SetCore("SendNotification", {
            Title = "Tool Checker",
            Text = "Arkenstone are inside this player: " .. username,
            Duration = 2,
        })
    else
        local CoreGui = game:GetService("StarterGui")
        CoreGui:SetCore("SendNotification", {
            Title = "Tool Checker",
            Text = "No players with the tool found.",
            Duration = 2,
        })
    end
end

-- Call the function to notify
notifyRandomPlayerWithTool()


task.wait(2)


-- The name of the tool to look for
local toolName = "The Arkenstone" -- Replace with the name of your tool

-- Function to find a random player currently holding the specific tool and show notification
local function notifyRandomPlayerHoldingTool()
    local playersWithTool = {}
    
    -- Collect players who are currently holding the specific tool
    for _, player in ipairs(game.Players:GetPlayers()) do
        local backpack = player.Backpack
        local tool = backpack:FindFirstChild(toolName)
        if tool then
            table.insert(playersWithTool, player)
        end
    end
    
    -- Notify with a random player's username who is holding the tool
    if #playersWithTool > 0 then
        local randomPlayer = playersWithTool[math.random(1, #playersWithTool)]
        local username = randomPlayer.Name

        local CoreGui = game:GetService("StarterGui")
        CoreGui:SetCore("SendNotification", {
            Title = "Tool Checker",
            Text = "Arkenstone holding by player: " .. username,
            Duration = 2,
        })
    else
        local CoreGui = game:GetService("StarterGui")
        CoreGui:SetCore("SendNotification", {
            Title = "Tool Checker",
            Text = "No players currently holding the tool.",
            Duration = 2,
        })
    end
end

-- Call the function to notify
notifyRandomPlayerHoldingTool()
