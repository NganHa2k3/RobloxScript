local tween2 = TweenService:Create(ScrollingFrame, tweenInfo, {Position = goalPosition2})

-- Toggle button behavior
local isToggled = false
ToggleButton.MouseButton1Click:Connect(function()
    if isToggled then
        tween2:Play()
